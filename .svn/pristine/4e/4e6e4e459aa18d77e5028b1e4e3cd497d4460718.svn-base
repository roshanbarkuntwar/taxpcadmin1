<!DOCTYPE HTML>
<html class="h-100" lang="en" xmlns:th="http://www.thymeleaf.org"
	xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout">

<head>
<title>Login | Taxcpc Gam</title>

<meta charset="utf-8">
<meta name="viewport"
	content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta http-equiv="x-ua-compatible" content="ie=edge">

<link rel="icon" href="./static/images/lhs-app-fevicon.png"
	type="image/icon" />

<!-- Bootstrap core CSS -->
<link href="./static/css/bootstrap/bootstrap-reboot.min.css" rel="stylesheet" />
<link href="./static/css/bootstrap/bootstrap.min.css" rel="stylesheet" />

<script type="text/javascript" src="./static/js/global/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="./static/js/global/bootstrap/bootstrap.bundle.min.js"></script>

<!-- Font Awesome -->
<link rel="stylesheet"
	href="./static/font-awesome/css/font-awesome.min.css" />
<link href="./static/stylesheets/main/main.css" rel="stylesheet" />
<link href="./static/stylesheets/login/login.css" rel="stylesheet" />

<!-- Project specific JS files -->
<script type="text/javascript" src="./static/js/global/lhs/lhsGlobalValidation.js"></script>
<script type="text/javascript" src="./static/js/global/lhs/lhsAjax.js"></script>
<script type="text/javascript" src="./static/js/global/lhs/lhsGlobal.js"></script>
</head>

<body class="d-flex align-items-center justify-content-center h-100">
<!-- 	Login page alert boxes -->
<!-- Error modal -->
	<div class="modal alert danger-alert fade" id="dangerAlert" tabindex="-1" role="dialog" aria-labelledby="dangerAlert" aria-modal="true">
		<div class="modal-dialog modal-sm" role="document">
			<div class="modal-content">
				<div class="modal-header position-relative d-flex justify-content-center">
					<i class="fa fa-exclamation-triangle mr-2" aria-hidden="true"></i>

				</div>
				<div class="modal-body py-5 text-center">
					<h4 id="errorAlertMsg">Please Enter a Valid Page Number to Jump</h4>
					<button id="errorBtn" type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close" onclick="">OK</button>
				</div>

			</div>
		</div>
	</div>
	<!-- Error modal -->
<!-- 	Login page alert boxes end-->
	<div class="login-wrap bg-white">
		<div class="row m-0">
			<div class="col-md-6 d-none d-md-block pl-0">
				<div
					class="login-vector h-100 p-4 position-relative">
					<img src="./static/images/login/login-vector.png "
						class="img-fluid">
						
						<div class="login-heading">
<!-- 						<h3>TaxCPC Data Import Utility</h3> -->
						</div>
					<p class="position-absolute browser-compatibility">
						This site is best viewed in latest version of <a
							href="/taxcpcV2/dwnldChromeSetup"
							class="font-weight-bold text-primary" target="_blank">Google
							Chrome</a>
					</p>
				</div>
			</div>
			<div class="col-md-6 ">
				<div class="login-form px-md-4 pt-3 pb-0 px-1">
					<div class="logo text-center">
						<a href="#"> <img src="./static/images/login/taxcpc-logo.png"
							id="loginPageLogo" class="company-logo mb-5" alt="taxcpc-logo">
						</a>
						<p class="text-center font-weight-bold mb-3" id="logoTagline"
							style="color: #2d62c1;"></p>

					</div>

					<!-- <div th:if="${errorMessage != null && !errorMessage.isEmpty()}" class="text-center col-md-12" id="errorMsgDiv">
						<div class="d-inline-block">
							<div class="form-validation p-1 my-1">
								<div class="form-validation form-validation--error p-1 my-1">
									<h5 class="d-inline-block" id="errorMsg">
										<ul class="errorMessage">
											<li><span>Email Id Is Incorrect</span></li>
										</ul>
									</h5>
								</div>
							</div>
						</div>
					</div> -->

					<form method="post" th:action="@{/app-login}" class="pl-3"
						autocomplete="off" >
						<h2 class="font-weight-bold mb-4">Forgot Password</h2>
						
						<div class="row  pt-2" style="display: none" id="notification">
							<div class="col-md-12 text-center">
								<div class="d-inline-block">
									<div class="form-validation form-validation--info p-1 my-1">
										<i class="fa fa-info-circle mr-2" aria-hidden="true"></i>
										<h5 class="d-inline-block" id="notificationMsg"></h5>
									</div>
								</div>
							</div>
						</div>

						<div class="form-group mb-4">

							<label for="email" class="mb-2">Enter Registered E-mail Id<span class="font-weight-bold text-danger ml-1">*</span></label><br> 
							<input
								type="text" id="email" name="email"  onclick="displayNone();" onblur ="validateEmailId(this);" placeholder="Enter Email Id"
								 class="form-control text-left" required  onkeydown="return (event.keyCode!=13);"/>

							
						</div>
						
						<div class="form-group mb-4">
                                <div class="text-left">
                                    <a id="login" href="login" tabindex="-1" onclick="backToLoginPage();" class="sign-up-btn font-weight-bold">Login</a>
                                </div>
                            </div>
                            
                            <div class="form-group mt-4">
                                <button type="button" onclick="checkEmailId();"class="btn btn-primary btn-block rounded-0 login-btn border-0 p-2 font-weight-bold"> Reset Password </button>
                            </div>
                      
					</form>

				  
					<label class="float-right"><label>Powered By <img
							src="./static/images/global/taxcpc-fevicon.png"
							style="width: 20px;">
							 <label class="font-weight-bold"
							style="color: #2d62c1;">
							TaxCPC</label></label> </label>
				</div>

			</div>
		</div>
	</div>

	<div class="modal alert success-alert fade" id="successAlertForgotPassword" tabindex="-1" role="dialog" aria-labelledby="successAlertForgotPassword" aria-hidden="true" data-backdrop="static" data-keyboard="false">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header position-relative d-flex justify-content-center">
					<i class="fa fa-check-circle-o" aria-hidden="true"></i>
				</div>
				<div class="modal-body py-5 text-center">
					<h4 id="successAlertMsg1">Data Save Successfully</h4>
					<button id="successBtn" type="button" class="btn btn-success" data-dismiss="modal" aria-label="Close">OK</button>
				</div>

			</div>
		</div>
	</div>
	
<footer class="position-fixed w-100 copyright-issue text-white px-md-4">
            <div class="text-dark float-left"> â’¸  2020   <a href="http://taxcpc.com/" target="_blank" class="font-weight-bold">TaxCPC</a>  All Rights Reserved</div>
            <div class="site-updation text-dark float-right"> Application Last Updated on <span th:text="${appLastBuildTimestamp}">06-07-2020 05:34 PM</span></div>


            </footer>
</body>


<script type="text/javascript"

src="./static/js/login/login.js"></script>

<script type="text/javascript">
document.addEventListener('keypress', function (e) {
    if (e.keyCode === 13 || e.which === 13) {
        e.preventDefault();
        return false;
    }
    
});
</script>
</html>